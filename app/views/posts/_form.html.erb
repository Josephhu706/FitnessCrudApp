<!--form to create and edit a new post-->
<div class="wrapper post-wrapper">
    <%= form_for @post, :html => {:class => "form-post", :multipart=>true} do |f| %>
        <%= f.label :title, 'Title', class: 'sr-only' %>
        <%= f.text_field :title, autofocus: true, class: 'form-control'%>


        <%= f.label :post_text, 'Post', class: 'sr-only' %>
        <%= f.text_area :post_text, autocomplete: "off", class: 'form-control',:cols => 10, :rows => 10 %>

        <%= f.label :image, "Upload Image",  class: 'sr-only' %>
        <%=f.cl_image_upload :image, :class=>"form-control", :type=>"file"%>

        <%= f.label :video, 'Video Youtube Url', class: 'sr-only' %>
        <%= f.url_field :video, class: 'form-control' %>

        <%= f.submit "Post!", class:'entry-btn btn btn-lg btn-primary btn-block'%>
    <%end%>
</div>
